---
// h2.astro
import clsx from "clsx/lite";

type Props = {
    className?: string;
    size?: "default" | "large";
}

const { size = "default", className } = Astro.props;
---

<h2
    class={clsx(
        "text-white font-semibold text-balance",
        size === "default" && "text-2xl md:text-4xl xl:text-5xl tracking-tight",
        size === "large" && "text-6xl md:text-7xl lg:text-8xl tracking-tighter",
        className,
    )}
>
    <slot />
</h2>
